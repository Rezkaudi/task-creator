{
  "name": "task-creator-figma-plugin",
  "version": "2.0.0",
  "description": "Figma plugin to import AI-generated designs from Task Creator - Clean Architecture",
  "main": "dist/code.js",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --outfile=dist/code.js --target=es2017 && npm run copy-html",
    "copy-html": "cp src/presentation/ui/ui.html dist/ui.html",
    "watch": "npm run build -- --watch",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build"
  },
  "keywords": [
    "figma",
    "plugin",
    "design",
    "automation",
    "clean-architecture"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@figma/plugin-typings": "^1.119.0",
    "typescript": "^5.8.2"
  }
}
